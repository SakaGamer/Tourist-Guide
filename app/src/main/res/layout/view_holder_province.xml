<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/margin_2dp"
    app:cardElevation="@dimen/margin_2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/vh_province_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:transitionName="@string/shared_image"
            android:scaleType="centerCrop"
            tools:targetApi="lollipop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.6"
            android:background="@drawable/text_view_background" />

        <TextView
            android:id="@+id/vh_province_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/wellfleet"
            android:lines="1"
            android:paddingBottom="@dimen/margin_8dp"
            android:paddingLeft="@dimen/margin_18dp"
            android:paddingRight="@dimen/margin_18dp"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

