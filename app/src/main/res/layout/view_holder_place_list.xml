<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="@dimen/margin_2dp"
    app:cardElevation="@dimen/margin_4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vh_place_img_place"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_default" />

        <LinearLayout
            android:id="@+id/vh_place_txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/vh_place_img_place"
            android:orientation="vertical"
            android:padding="@dimen/margin_12dp">

            <TextView
                android:id="@+id/vh_place_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/vh_place_txt_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="@string/app_name" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>